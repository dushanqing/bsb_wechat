<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    <view class="page__hd">
        <view class="page__title">基本信息</view>
        <view class="page__desc">页码图标</view>
    </view>
    <view class="page__bd">
        <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">商户名称</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="XXX有限公司"/>
                </view>
            </view>
             <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">商户简称</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="零售批发"/>
                </view>
            </view>
             <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label"></view>营业执照号码
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="4201XXX0005"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">商户类型</view>
                </view>
                <view class="weui-cell__bd">
                    <picker bindchange="bindMchtLevChange" value="{{mchtLevIndex}}"  range="{{mchtLevs}}">
                        <view class="weui-select weui-select_in-select-after">{{mchtLevs[mchtLevIndex]}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">是否门店</view>
                </view>
                <view class="weui-cell__bd">
                    <picker bindchange="bindStoreChange" value="{{storeIndex}}"  range="{{stores}}">
                        <view class="weui-select weui-select_in-select-after">{{stores[storeIndex]}}</view>
                    </picker>
                </view>
            </view>
             <view class="weui-cell weui-cell_select">
                        <view class="weui-cell__hd weui-cell__hd_in-select-after">
                            <view class="weui-label">所属商户</view>
                        </view>
                        <view class="weui-cell__bd">
                            <picker bindchange="bindStoreChange" value="{{storeIndex}}"  range="{{stores}}">
                                <view class="weui-select weui-select_in-select-after">{{stores[storeIndex]}}</view>
                            </picker>
                        </view>
             </view>
             <view class="weui-cell weui-cell_select">
                        <view class="weui-cell__hd weui-cell__hd_in-select-after">
                            <view class="weui-label">行业类别</view>
                        </view>
                        <view class="weui-cell__bd">
                            <picker bindchange="bindStoreChange" value="{{storeIndex}}"  range="{{stores}}">
                                <view class="weui-select weui-select_in-select-after">{{stores[storeIndex]}}</view>
                            </picker>
                        </view>
             </view>
             <view class="weui-cell weui-cell_select">
                        <view class="weui-cell__hd weui-cell__hd_in-select-after">
                            <view class="weui-label">经营类型</view>
                        </view>
                        <view class="weui-cell__bd">
                            <picker bindchange="bindStoreChange" value="{{storeIndex}}"  range="{{stores}}">
                                <view class="weui-select weui-select_in-select-after">{{stores[storeIndex]}}</view>
                            </picker>
                        </view>
             </view>
              <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">详细地址</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="地址"/>
                </view>
            </view>
             <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">联系电话</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="1851234****"/>
                </view>
            </view>
             <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">邮箱</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="bsb@bsb.com"/>
                </view>
            </view>

                  <!--  所属商户 
                  
                  <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" wx:for="{{ items }}" wx:key="" data-path="{{ item.path }}" data-index="{{ index }}" bindtap="navigateTo">  
                      
                            <view class="weui-cell__bd">{{ item.text }}</view>
                            <view class="weui-cell__ft weui-cell__ft_in-access">
                              <text wx:if="{{ index === 2 }}">{{ item.path }}</text>
                            </view>
                  </view> -->
           
        </view>

        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="mchtInfoNextStep">下一步</button>
        </view>
    </view>
</view>


