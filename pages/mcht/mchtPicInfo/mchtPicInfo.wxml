        <view class="weui-label">是否三证合一</view>
      </view>
      <view class="weui-cell__bd">
        <picker bindchange="bindStoreChange" value="{{storeIndex}}" range="{{stores}}">
          <view class="weui-select weui-select_in-select-after">{{stores[storeIndex]}}</view>
        </picker>
      </view>
    </view>
    
    <view class="weui-btn-area">
      <button class="weui-btn" type="primary" bindtap="mchtPicNextStep">下一步</button>
    </view>
    </view>
</view>