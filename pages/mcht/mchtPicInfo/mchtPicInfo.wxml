<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    <view class="page__hd">
      <view class="page__title">电子信息</view>
      <view class="page__desc">页码图标</view>
    </view>
    <view class="page__bd">
      <view class="weui-cell weui-cell_select">
